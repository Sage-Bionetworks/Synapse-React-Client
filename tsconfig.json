{
  "compilerOptions": {
    "allowJs": false,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "baseUrl": "src", // We omit baseUrl on purpose so VSCode doesn't suggest absolute imports that break in the transpiled code.
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "react",
    "rootDir": "src/lib",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "rollup.config.js",
    "node_modules",
    "build",
    "coverage",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "setupTests.js"
  ],
  "include": [
    "src"
  ]
}
