{
  "compilerOptions": {
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    ".storybook",
    "storybook-static",
    "esbuild.config.mjs",
    "node_modules",
    "build",
    "coverage",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "setupTests.js"
  ],
  "include": ["src"]
}
